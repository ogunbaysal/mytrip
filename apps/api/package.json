{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "serve": "bun dist/index.js",
    "start": "bun run build && bun run serve",
    "lint": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/db/seed.ts",
    "db:seed:content": "bun run src/db/scripts/seed-content.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "better-auth": "^1.4.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.9.8",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "uuid": "^11.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.3",
    "@types/bun": "latest",
    "@types/nanoid": "^3.0.0",
    "@types/pg": "^8.15.6",
    "@types/uuid": "^11.0.0",
    "bun-types": "^1.3.3",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}