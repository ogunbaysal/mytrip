{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --outdir=dist --packages=external",
    "serve": "node dist/index.js",
    "start": "npm run build && npm run serve",
    "lint": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts",
    "db:seed:content": "tsx src/db/scripts/seed-content.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "@hono/node-server": "^1.13.7",
    "better-auth": "^1.4.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.9.8",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "uuid": "^11.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.3",
    "@types/node": "^22.10.2",
    "@types/nanoid": "^3.0.0",
    "@types/pg": "^8.15.6",
    "@types/uuid": "^11.0.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "esbuild": "^0.24.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}