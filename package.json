{
  "name": "mytrip",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "add:web": "bun add --cwd apps/web",
    "add:dashboard": "bun add --cwd apps/dashboard", 
    "add:admin": "bun add --cwd apps/admin",
    "add:api": "bun add --cwd apps/api",
    "add:db": "bun add --cwd packages/database",
    "postinstall": "npm install --package-lock-only --ignore-scripts"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.18",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
